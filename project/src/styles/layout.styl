  background #3996FF
  color #fff
  margin-right 0
  margin-left 4%
.van-dialog__footer--buttons
  padding: 10px 20px;
.van-dialog  .van-dialog__content
    border-top 1px dashed #ccc
    border-bottom 1px dashed #ccc
    margin 0 0.2rem
.van-dialog.dialog_content_input  .van-dialog__content
    border-bottom none
.van-hairline--top::after{
  border-top-width:0
}
.van-dialog .van-dialog__header{
  font-weight: bold;
    padding-bottom: 0.5rem;
    font-size: 0.4rem;
}
.van-dialog__message--has-title{
    color:#1A1A1A;
}
.van-button--danger{
  background-color:#EC493C;
}
.border_color [class*=van-hairline]::after{
  border-color:#e9e9e9;
}
.text_right{
  text-align:right;
}
.align_items_center .van-cell{
      align-items: center;
}
.ellipsis_box .van-cell__value{
    flex: none;
    padding-left:0.2rem;
}
.van-dialog.dialog_content_input .dialog_input,.van-dialog.dialog_content_input input
    // width 80%
    background #F0F0F0
    height 1.1rem
    line-height 1.1rem
    margin-left .2rem
    padding .2rem 
    box-sizing border-box
    border-radius: .2rem
    flex-grow: 1;
.dialog_content_input .van-dialog__message
  display: flex
  align-items: center
.van-dialog.dialog_content_input .van-field__label
  line-height 1rem
  flex unset
