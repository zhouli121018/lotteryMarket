.van-button
  border-radius .2rem
.dialog_content .van-dialog__message
  border-top 1px dashed #ccc
  margin-top .3rem
  border-bottom 1px dashed #ccc
  padding-top 0.66667rem
.dialog_content .van-dialog__footer--buttons
  padding .4rem 0
