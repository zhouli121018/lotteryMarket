      display flex
      padding .2rem 0
      color #ABABAB
      font-size 12px
    p:last-child
      font-size 12px
      color #ABABAB
  .van-button--plain.van-button--primary {
    color: #3996ff;
    border: 1px solid #3996ff;
  }
.income_content
    width 100%
    border 1px solid #E3E3E3
    background #F5F5F5
    padding .3rem .2rem
    box-sizing border-box
    &.income_contents
        background #ffffff
        color #393939
        padding .4rem .2rem
    .van-col
        text-align center
        color #696969